name:                sse
version:             0.1.0.0
synopsis:            Server sent events example
homepage:            https://sse.haskell-miso.org
license:             BSD3
license-file:        LICENSE
author:              David Johnson
maintainer:          code@dmj.io
copyright:           David Johnson (c) 2016-2025
category:            Web
build-type:          Simple
cabal-version:       >=1.10

executable server
  main-is:
    Main.hs
  if impl(ghcjs) || arch(javascript)
    buildable: False
  else
    ghc-options:
      -O2 -threaded -Wall -rtsopts
    hs-source-dirs:
      server, shared
    build-depends:
      aeson,
      base < 5,
      binary,
      containers,
      http-types,
      miso,
      mtl,
      network-uri,
      servant,
      servant-server,
      time,
      wai,
      wai-extra,
      warp
    default-language:
      Haskell2010

executable client
  main-is:
    Main.hs
  if !impl(ghcjs) && !arch(javascript)
    buildable: False
  else
    hs-source-dirs:
      client, shared
    build-depends:
      aeson,
      base < 5,
      containers,
      network-uri,
      miso,
      servant
    default-language:
      Haskell2010
